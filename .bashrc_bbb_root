# .bashrc

# Source global definitions
if [ -f /etc/bashrc ]; then
	. /etc/bashrc
fi

# User specific aliases and functions

set -o noclobber

### Add more colors
    [[ -x /usr/bin/dircolors ]] && {
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls="ls --color=auto"
    alias dir="dir --color=auto"
    alias vdir="vdir --color=auto"
    alias grep="grep --color=auto"
    alias fgrep="fgrep --color=auto"
    alias egrep="egrep --color=auto"
    }

  export PAGER='most'

### Add more aliases
    #alias ll="ls -lshaF --color=auto"
    #alias la="ls -ashtF --color=auto"
    #alias l="ls -ChtF --color=auto"
    alias ll="ls -lah --color=auto"
	alias la="ls -ath --color=auto"
	alias l="ls -ahl --color=auto"

    alias upd="apt update"
    alias upg="apt upgrade"
    alias ins="apt install"
    alias rem="apt remove"
    alias mnt="mount | awk -F' ' '{ printf \"%s\t%s\n\",\$1,\$3; }' | column -t | egrep ^/dev/ | sort"
    alias count="find . -type f | wc -l"
    alias cpv="rsync -ah --info=progress2"
	alias netst=" netstat -plnt"
	
